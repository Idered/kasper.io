# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js}]
charset = utf-8

# 2 space indentation
[*.jade]
indent_style = space
indent_size = 2

# 4 space indentation
[*.scss]
indent_style = space
indent_size = 4

# 2 space indentation
[source/js/**.js]
indent_style = space
indent_size = 2
